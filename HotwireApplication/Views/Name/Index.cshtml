@model NamesListModel

@{
    ViewBag.Title = "title";
    Layout = "_Social";
}
<div class="w-full">
  
    
  @if (TempData.ContainsKey("Notice"))
  {
     <partial name="_Notice" model="@TempData["Notice"]" />
  }
  <turbo-frame id="nameform">
   
    @if (Model.Names.Count == 0)
    {
      <partial name="Empty" model="Model"/>
    }
    else
    {
      <a href="@Url.RouteUrl("NewName")" role="button" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> <!-- Heroicon name: solid/plus -->
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
        </svg>
        New Name
      </a>
      
    }
  </turbo-frame>
  <ul id="namelist" role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3">
    @foreach (var name in Model.Names)
    {
      <partial name="_Name" model="name"></partial>
    }
    <!-- More people... -->
  </ul>
  
</div>